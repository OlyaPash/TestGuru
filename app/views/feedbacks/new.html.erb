<div class="row justify-content-center mt-2">
<div class="col col-md-7">
  <h1 class="text-center ">Feedback</h1>

  <div class="card border-primary mt-4 mb-4">
    <div class="card-body">

      <%= form_for @feedback, data: {turbo: false} do |f| %>
        <%= render 'shared/errors', resource: @feedback %>

        <div class="form-group">
          <p>
            <%= f.label :message, 'Your message' %>
            <%= f.text_area :message, cols: 40, rows: 5, class: 'form-control' %>
          </p>

          <p>
            <%= f.submit 'Send', class: 'btn btn-primary mt-1' %>
          </p>
        </div>

      <% end %>
    </div>
  </div>
</div>  
