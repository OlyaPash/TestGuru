<tr>
  <td class="align-middle">
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class="align-middle"><%= test.level %></td>
  <td class="align-middle"><%= test.questions.count %></td>
  <td class="align-middle"><%= test.timer %></td>
  <td class="align-middle"><%= link_to t('.show'), admin_test_path(test), class: 'btn btn-outline-primary' %></td>
  <td class="align-middle">
    <%= link_to t('.edit'), 
                edit_admin_test_path(test),
                data: { test_id: test.id, text_edit: t('.edit'), text_cancel: t('.cancel') },
                class: 'form-inline-link' %>
  </td>
  <td class="align-middle">
    <%= button_to t('.delete'), admin_test_path(test),
                  method: :delete,
                  class: 'btn btn-danger',
                  form: { data: {turbo_confirm: t('.delete_confirm')} } %>
  </td>
</tr>
