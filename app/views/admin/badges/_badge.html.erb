<tr>
  <td class="align-middle"><%= badge.title %></td>
  <td class="align-middle"><%= image_tag badge.image, class: 'mr-3' %></td>
  <td class="align-middle"><%= badge.rule %></td>
  <td class="align-middle"><%= badge.rule_value %></td>
  <td class="align-middle"><%= link_to t('.show'), admin_badge_path(badge) %></td>
  <td class="align-middle"><%= link_to t('.edit'), edit_admin_badge_path(badge) %></td>
  <td class="align-middle"><%= button_to t('.delete'), admin_badge_path(badge),
                                          method: :delete,
                                          class: 'btn btn-danger',
                                          form: { data: {turbo_confirm: t('.delete_confirm')} } %>
  </td>
</tr>
